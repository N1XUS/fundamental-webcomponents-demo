{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2020",
    "target": "ES2020",
    "lib": [ "es2020", "dom" ],
    "jsx": "react",
    "allowJs": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "files": ["src/index.ts", "typings.d.ts"],
  "exclude": ["spec"],
  "typeRoots": ["."]
}
